{
	"easycom": {
	"autoscan": true,
		"custom": {
            "cl-(.*)": "cl-uni/components/cl-$1/cl-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "酷卖",
				"navigationBarBackgroundColor": "#2b2e3f",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "components/coupon/coupon",
			"style": {
				"navigationBarTitleText": "优惠券",
				"navigationBarBackgroundColor": "#2b2e3f",
				"navigationBarTextStyle": "white"
			}
		},
		{
			"path": "pages/sort/sort",
			"style": {
				"navigationBarTitleText": "分类",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/shopCar/car",
			"style": {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "个人中心",
				"enablePullDownRefresh": false,
				"navigationBarBackgroundColor": "#2b2e3f",
				"navigationBarTextStyle": "white"
			}
		},

		{
			"path": "pages/search/index",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		},
		{

			"path": "pages/search/classification",
			"style": {
				"navigationBarTitleText": "搜索列表"
			}
		},
		{
			"path": "pages/address/addressSubmit",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/address/addressList",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/login/h5login",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/goodsDetail/goodsDetail",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "商品详情",
				"app-plus": {
					"bounce": "none", //关闭窗口回弹效果
					"titleNView": {
						"buttons": [ //原生标题栏按钮配置,
							{
								"type": "back",
								"float": "left"
							}
						]
					}
				}
			}
		},
		{
			"path": "pages/orderList/orderList",
			"style": {
				"navigationBarTitleText": "订单列表",
				"navigationBarBackgroundColor":"#2b2e3d",
				"navigationBarTextStyle":"white",
				"enablePullDownRefresh":false
			}
		
		},
		{
			"path": "pages/orderDetails/orderDetails",
			"style": {
				"navigationBarTitleText": "订单详情",
				"navigationBarBackgroundColor": "#2b2e3d",
				"navigationBarTextStyle":"white",
				"enablePullDownRefresh": false
			}
		
		},
		{
			"path": "pages/payresult/payresult",
			"style": {
				"navigationBarTitleText": "支付结果",
				"navigationBarBackgroundColor": "#2b2e3d",
				"enablePullDownRefresh": false
			}
		},
		{
		    "path" : "pages/confirmorder/confirmorder",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "确认订单",
				"navigationBarBackgroundColor": "#2b2e3d",
		        "enablePullDownRefresh": false,
				"navigationBarTextStyle":"white"
		    }
		    
		}
	],
	"tabBar": {
		"list": [{
				"pagePath": "pages/home/home",
				"iconPath": "static/tabbar/index.png",
				"selectedIconPath": "static/tabbar/index-select.png"
			},
			{
				"pagePath": "pages/sort/sort",
