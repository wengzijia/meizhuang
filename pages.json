				"selectedIconPath": "static/tabbar/classification-select.png"
			},
			{
				"pagePath": "pages/shopCar/car",
				"iconPath": "static/tabbar/shoppingCart.png",
				"selectedIconPath": "static/tabbar/shoppingCart-select.png"
			},
			{
				"pagePath": "pages/user/user",
				"iconPath": "static/tabbar/my.png",
				"selectedIconPath": "static/tabbar/my-select.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",

		"backgroundColor": "#F8F8F8",
		"usingComponents": {
		}

	}

