.content {
  width: 100%;
  margin: 10rpx 0;
  border-radius: 10rpx;
  background-color: #ffffff;
}
.content .imgWpar image {
  width: 350rpx;
  height: 350rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.content .content_desc {
  width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  /* for Opera */
}
.content .content_desc text {
  font-weight: 700;
}
.content .bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.content .bottom .price .price_item1 {
  font-size: 25rpx;
  margin-right: 10rpx;
}
.content .bottom .price .price_item2 {
  font-size: 45rpx;
  font-family: serif;
}
.content .bottom .price .price_item3 {
  font-size: 32rpx;
  color: #444444;
}
.content .bottom .sold {
  font-size: 25rpx;
  margin-top: 18rpx;
  color: #999999;
}

