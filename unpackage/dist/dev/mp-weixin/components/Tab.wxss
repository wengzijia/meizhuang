.tab {
  width: 100%;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e7e7e7;
  position: fixed;
  background: #fff;
  z-index: 99;
}
.tab .tab_scroll {
  width: 100%;
  height: 100rpx;
  white-space: nowrap;
  line-height: 100rpx;
}
.tab .tab_scroll .tab_scroll_list {
  display: inline-block;
  font-size: 28rpx;
  margin-right: 40rpx;
  position: relative;
}
.tab .tab_scroll .tab_scroll_lists {
  display: inline-block;
  font-size: 28rpx;
  margin-right: 40rpx;
  position: relative;
}
.tab .tab_scroll .tab_scroll_list:after {
  position: absolute;
  bottom: 0;
  text-align: center;
  left: 46%;
  content: "";
  width: 20rpx;
  height: 4rpx;
  border-top: 4rpx solid #3b87f6;
}
.tab .pull {
  width: 80rpx;
  height: 98rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  z-index: 999;
  background: #fff;
  box-shadow: #000 -5rpx 0px 5px -5px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tab .pull image {
  width: 30rpx;
  height: 30rpx;
}
.popup {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0rpx;
  z-index: 10;
}
.popup_list {
  width: 100%;
  height: 280rpx;
  background: #fff;
  transition: height .5s;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  position: fixed;
  z-index: 99;
}
.popup_list .label {
  width: 100%;
}
.popup_list .label .label_scroll {
  width: 100%;
  height: 280rpx;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}
.popup_list .label .label_scroll .label_list {
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 10rpx;
  border-radius: 50rpx;
  background: #C0C0C0;
  display: inline-block;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.popup_lists {
  width: 100%;
  height: 0rpx;
  background: #fff;
  transition: height .5s;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  position: fixed;
  z-index: 99;
}

